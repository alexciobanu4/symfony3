{% extends "BlogBundle::layout.html.twig"%}

{% block styles %} 
<link href="{{ asset('bower_components/datepicker/dist/datepicker.min.css') }}" rel="stylesheet" />
{% endblock %}

{% block content %}
    
    <div class="title">
        <div class="title-container">
            <h1>{% trans %}title_register{% endtrans %}</h1>
        </div>
    </div>
    <div class="form">
        <div class="form-container">
            {% for message in app.session.flashbag().get('status') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            {{form_start(form, {'action':'', 'method':'POST', 'attr': {'novalidate': 'novalidate'}})}}
            <div class="form__group">
                {{form_label(form.name)}}
                {{form_widget(form.name)}}
            </div>
            <div class="form__group">
                <label>Apellidos: </label>
                {{form_widget(form.surname)}}
            </div>
            <div class="form__group">
                <label>Email: </label>
                {{form_widget(form.email)}}
            </div>
            <div class="form__group">
                {{form_widget(form.password)}}
            </div>
            <div class="form__group">
                <label>Roles: </label>
                {{form_widget(form.roles)}}
            </div>
            <div class="form__group">
                <label>Fecha de nacimiento: </label>
                {{form_widget(form.birthday)}}
            </div>
            {{form_end(form)}}
        </div>
    </div>

{% endblock %}

{% block scripts %}  
<script type="text/javascript" src="{{ asset('bower_components/datepicker/dist/datepicker.min.js') }}"></script>
<script type="text/javascript">
    jQuery(function($) {
        $('[data-toggle="datepicker"]').datepicker({
          language: 'es-ES',
          format: 'yyyy-mm-dd'
        });
    });
</script>
{% endblock %}