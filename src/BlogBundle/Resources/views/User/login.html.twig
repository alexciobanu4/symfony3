{% extends "BlogBundle::layout.html.twig"%}
{% block content %}
    
    <div class="title">
        <div class="title-container">
            <h1>{% trans %}title_login{% endtrans %}</h1>
        </div>
    </div>
    <div class="form">
        <div class="form-container">
            <form action="{{path("login_check")}}" method="post" novalidate="novalidate">
                <div class="form__group">
                    <label>Email:</label>
                    <input type="email" id="username" name="_username" required value="{{ last_username }}" class="form-control" />
                </div>
                <div class="form__group">
                    <label>Contrase√±a:</label>
                    <input type="password" id="password" name="_password" required class="form-control" />
                </div>
                <div class="form__group">
                    <input type="checkbox" id="remember_me" name="_remember_me" checked />
                    <label for="remember_me">Keep me logged in</label>
                </div>

                <input type="submit" value="Entrar" class="btn btn-success"/>
                <input type="hidden" name="_target_path" value="/login" />
            </form>
        </div>
    </div>
    
{% endblock %}