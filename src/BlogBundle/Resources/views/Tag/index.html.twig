{% extends "BlogBundle::layout.html.twig" %}

{% block content %}
    <div class="title">
        <div class="title-container">
            <h1>Etiquetas</h1>
            <a href="{{path("blog_add_tag")}}" class="listado--add">Añadir etiqueta</a>
        </div>
    </div>
    
    <div class="listado">
        <div class="listado-container">

            {% for message in app.session.flashbag().get('status') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            <table>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Eliminar</th>
                </tr>
                {% for tag in tags %}
                    <tr>
                        <td>{{ tag.name }}</td>
                        <td>{{ tag.description }}</td>
                        <td>
                            
                                <a href="{{path("blog_delete_tag", {"id":tag.id})}}" class="btn-delete" onclick="return confirm('Confirmas el borrado?')">Eliminar</a>
                           
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
 
{% endblock %}